<h1>test</h1>



<div id="question-carousel" class="carousel slide" data-wrap="false" data-interval="false">

    <!-- iterate over questions (li) -->
  <ol class="carousel-indicators">
    <% @questions.each_with_index do |question, index| %>
      <% if index == 0 %>
        <li data-target="#question-carousel" data-slide-to="0" class="active"></li>
      <% else  %>
        <li data-target="#question-carousel" data-slide-to="<%= index %>"></li>
      <% end %>
    <% end %>
  </ol>
  <div class="carousel-inner">
    <% @questions.each_with_index do |question, index| %>
      <% if index == 0 %>
        <div class="carousel-item active">
      <% else  %>
        <div class="carousel-item">
      <% end %>
        <div class="card" alt="First slide">
           <div class="card-body">
            <h5 class="card-title">Question <%= index + 1 %></h5>
            <p class="card-text"><%=question.text%></p>
            <a href="#" class="btn btn-outline-secondary">Go somewhere</a>
            <a href="#" class="btn btn-outline-secondary">Go somewhere</a>
          </div>
        </div>
      </div>


<% @question.answers.each_with_index do |answer, index| %>
        <a class="carousel-control-prev" href="#answer-carousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <% else  %>
        <a class="carousel-control-next" href="#answer-carousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
      <% end %>
    <% end %>



    <% end %>
  </div>
</div>
