  <div class="container">
    <div class="row justify-content-center">
        <h2>Your Roadmap for <%=@profession.track%></h2>
          <p>This is your <i><b>Truepath</b></i> to become a <%= @profession.track %></p>
        <a href="/professions/Product%20Management%20Intern/jobs" type="button" class="btn btn-primary">Find a Matching Job</a>
    </div>


  <div class="container-fluid blue-bg">
    <div class="roadmap">
      <h2 class="pb-3 pt-2 Vertical Left-Right Timeline"></h2>
        <% (1..@max_order).to_a.each do |order_number| %>
          <% if !order_number.even? %>
<!-- first section -->
          <div class="row align-items-center how-it-works">
            <div class="col-2 text-center bottom">
              <div class="circle"><%= order_number %></div>
            </div>
            <div class="col-9 offset-1">
              <% @steps.where(order: order_number - 1).each do |step| %>
              <div class="d-flex align-items-center">
                <Input type="checkbox" name=<%= step.name %>>
                <h5 class="mx-2 h5-checkbox"><%= step.name %></h5>
              </div>
              <% end %>
            </div>
          </div>
  <!-- path in between -->
          <div class="row timeline">
            <div class="col-2">
              <div class="corner top-right"></div>
            </div>
            <div class="col-8">
              <hr/>
            </div>
            <div class="col-2">
              <div class="corner left-bottom"></div>
            </div>
          </div>

          <% else %>
    <!-- second section -->
            <div class="row align-items-center justify-content-end how-it-works">
              <div class="col-6 text-right">
                <% @steps.where(order: order_number - 1).each do |step| %>
                <div class="d-flex align-items-center">
                   <h5 class="mx-2 h5-checkbox"><%= step.name %></h5>
                  <Input type="checkbox" name=<%= step.name %>> 
                </div>
                <% end %>
              </div>
              <div class="col-2 text-center full">
                <div class="circle"><%= order_number %></div>
              </div>
            </div>
    <!-- path in between -->
            <div class="row timeline">
              <div class="col-2">
                <div class="corner right-bottom"></div>
              </div>
              <div class="col-8">
                <hr/>
              </div>
              <div class="col-2">
                <div class="corner top-left"></div>
              </div>
            </div>
          <% end %>
      <% end %>

    </div>
  </div>

</div>


