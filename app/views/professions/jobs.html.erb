<div class= "exit">
  <%= link_to 'X', :back %>
</div>
<div id="jobs-carousel" class="carousel slide" data-wrap="false" data-interval="false">
<h3 class= "jobs-heading">Relevant openings for <%= @jobs[0][:title] %></</h3>
<style>
  .carousel-control-prev-icon,
  .carousel-control-next-icon {
    height: 100px;
    width: 100px;
    outline: black;
    background-size: 100%, 100%;
    border-radius: 50%;
    /*border: 1px solid black;*/
    background-image: none;
  }

  .carousel-control-next-icon:after
  {
    content: '▶';
    font-size: 15px;
    color: #1E1248;
  }

  .carousel-control-prev-icon:after {
    content: '◀';
    font-size: 15px;
    color: #1E1248;
  }

  .card-body {
    padding: 1rem 4.25rem;
  }

  #jobs-carousel {
    height: 560px;
  }
  .card {
    max-height: 420px;
    overflow: scroll;
    border: none;
  }
  .carousel-inner {
    position: relative;
  }
  .btm-shade {
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 30%;
    left: 0;
    background-image: linear-gradient(180deg, rgba(255,255,255,0) 0%, rgba(255,255,255,0.7588325652841782) 85%, rgba(255,255,255,1) 100%);
  }
</style>

<div id="jobs-carousel" class="carousel slide" data-wrap="false" data-interval="false" data-ride="carousel">
<h3 class= "jobs-heading">Relevant openings for {xyz}</h3>
  <ol class="carousel-indicators">
    <!-- iterate over questions (li) -->
    <% @jobs.each_with_index do |job, index| %>
      <% if index == 0 %>
        <li data-target="#jobs-carousel" data-slide-to="0" class="active"></li>
      <% else  %>
        <li data-target="#jobs-carousel" data-slide-to="<%= index %>"></li>
      <% end %>
    <% end %>
  </ol>
  <div class="carousel-inner">
    <% @jobs.each_with_index do |job, index| %>
      <% class_name = index == 0 ? 'carousel-item active' : 'carousel-item'  %>
        <div class="<%= class_name %>">
          <div class="card" alt="First slide">
              <div class="card-body">
                <h5 class="card-title"><%= job[:title] %></h5>
                <h6 class="card-title"><%= job[:company] %></h6>
                <h6 class="card-title"><%= job[:location] %></h6>
                <p class="card-text"><%= job[:description] %></p>
                <br>
                <a href="#" class="btn btn-primary btn-lg btn-block">Apply</a>
                <br>
                <br>
                <br>
                <br>
              </div>
          </div>
        </div>
    <% end %>
    <div class="btm-shade"></div>
  </div>
  <a class="carousel-control-prev" href="#jobs-carousel" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#jobs-carousel" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
