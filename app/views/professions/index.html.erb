<div class="professions-index">
  <h1>How does this sound?</h1>
  <p>Decide which career you'd like to compare by tapping the respective buttons below.</p>

  <section id="career-suggestions">
    <% @professions.each.with_index do |c, i| %>
    <div class="suggestion <%= "suggestion-#{i+1}" %> <%= "profession-#{c.id}" %>" draggable="true" style="background-image: linear-gradient(90deg, rgba(89,86,128,.5) 0%, rgba(89,86,128,.5) 100%), url(<%= 'https://images.unsplash.com/photo-1554774853-719586f82d77?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1950&q=80' %>);">
      <div class="content">
        <h2><%= c.track %></h2>
        <p><%= c.short_description %></p>
        <ul class="tags">
          <li class="tag"><i class="far fa-laugh-beam"></i> 4.6</li>
          <li class="tag">Communication</li>
        </ul>
      </div>
    </div>
    <% end %>
  </section>

  <ul class="selection">
    <li><a href="" class="keep selected_career" style="width: 70px; display: flex; align-items: center; justify-content: center;">Keep</a></li>
    <li><a href="" class="ignore selected_career" style="width: 70px; display: flex; align-items: center; justify-content: center;">Ignore</a></li>
  </ul>
</div>
